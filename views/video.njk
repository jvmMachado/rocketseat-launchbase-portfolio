{% extends "layout.njk" %}

{% block head %}
  <title>Portfolio - jvmMachado</title>

  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet"/>

{% endblock %}

{% block content %}

  <div id="wrapper" class="video">
    <h1>{{item.title}}</h1>
  </div>

  <section class="video">

    <div class="card">
      <div class="card__video-container" id="{{item.id}}">
        <iframe src="https://youtube.com/embed/{{item.id}}" frameborder="0"></iframe>

      </div>
      <div class="card__content">
        <p>{{item.title}}</p>
      </div>
      <div class="card__info">
        <p>{{item.duration}}</p>
        <p class="card__price">{{item.price}}</p>
      </div>
    </div>

  </section>

  <script>
    document
      .querySelector('.about-link')
      .classList
      .remove('active-tab');
    document
      .querySelector('.portfolio-link')
      .classList
      .add('active-tab');
  </script>

{% endblock %}